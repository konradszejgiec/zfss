div(class="mx-auto" id="alert" style="width: 700px; display: none;")
    div.container.px-4.px-lg-5
        div.row.gx-4.gx-lg-5.justify-content-center.mb-3
            div.col-md-10.col-lg-8.col-xl-12.border.border-dark.border-1.bg-light
